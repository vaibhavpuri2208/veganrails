<h1>Listing places</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>Phone</th>
    <th>City</th>
    <th>Category</th>
    <th>Cuisine</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= place.description %></td>
    <td><%= place.address %></td>
    <td><%= place.phone %></td>
    <td><%= place.city.name %></td>
    <td><%= place.category.name %></td>
    <td><%= place.cuisine.name %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

